{
  "name": "atat",
  "version": "1.0.0",
  "description": "a little bit this, a little bit that.",
  "main": "index.js",
  "scripts": {
    "start": "nodemon server.js",
    "start-majiang": "nodemon majiang.js",
    "build": "npm run scripts -- build",
    "dev": "npm run scripts -- dev",
    "clean": "npm run scripts -- clean",
    "unlock": "rm -rf package-lock.json",
    "lint": "concurrently \"npm run lint-apps\" \"npm run lint-server\" \"npm run lint-stories\"",
    "lint-apps": "eslint -c apps/.eslintrc --ignore-path apps/.eslintignore apps/**/*.ts",
    "lint-stories": "eslint -c apps/stories/.eslintrc --ignore-path apps/stories/.eslintignore apps/stories/**/*.tsx",
    "lint-server": "eslint -c .eslintrc --ignore-path .eslintignore **/*.js",
    "link-common": "cd ./apps/common && npm link && cd ../.. && npm link atat-common",
    "unlink-common": "npm unlink atat-common && cd ./apps/common && npm unlink",
    "sync-common": "npm install ./apps/common",
    "scripts": "node ./scripts/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": "eslint -c .eslintrc --ignore-path .eslintignore",
    "apps/**/*.ts": "eslint -c apps/.eslintrc --ignore-path apps/.eslintignore",
    "apps/stories/**/*.tsx": "eslint -c apps/stories/.eslintrc --ignore-path apps/stories/.eslintignore"
  },
  "keywords": [],
  "author": "Zhouyang Ye",
  "license": "ISC",
  "dependencies": {
    "atat-common": "file:apps/common",
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "cli-cursor": "^3.1.0",
    "cookie": "^0.5.0",
    "crypto-js": "^4.1.1",
    "figlet": "^1.4.0",
    "mysql": "^2.18.1",
    "node-cmd": "^3.0.0",
    "node-emoji": "^1.10.0",
    "react": "^18.1.0",
    "react-dom": "^16.13.1",
    "socket.io": "^4.5.0",
    "socket.io-client": "^4.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/eslint-parser": "^7.17.0",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.6.0",
    "eslint": "^8.15.0",
    "eslint-plugin-react": "^7.29.4",
    "husky": "^4.2.5",
    "less-loader": "^6.1.3",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "terser-webpack-plugin": "^3.0.6",
    "ts-loader": "^7.0.5",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^4.6.4",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^4.2.2"
  }
}
