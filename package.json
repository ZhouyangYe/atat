{
  "name": "atat",
  "version": "1.0.0",
  "description": "a little bit this, a little bit that.",
  "main": "index.js",
  "scripts": {
    "start": "nodemon server.js",
    "start-majiang": "nodemon majiang.js",
    "start-pingpong": "nodemon pingpong.js",
    "build": "npm run scripts -- build",
    "dev": "npm run scripts -- dev",
    "clean": "npm run scripts -- clean",
    "gen-password": "npm run scripts -- password",
    "unlock": "rm -rf package-lock.json",
    "lint": "concurrently \"npm run lint-apps\" \"npm run lint-server\" \"npm run lint-stories\"",
    "lint-apps": "eslint -c apps/.eslintrc --ignore-path apps/.eslintignore apps/**/*.ts",
    "lint-stories": "eslint -c apps/stories/.eslintrc --ignore-path apps/stories/.eslintignore apps/stories/**/*.tsx",
    "lint-majiang": "eslint -c apps/majiang/.eslintrc --ignore-path apps/majiang/.eslintignore apps/majiang/**/*.vue",
    "lint-server": "eslint -c .eslintrc --ignore-path .eslintignore **/*.js",
    "link-common": "cd ./apps/common && npm link && cd ../.. && npm link atat-common",
    "unlink-common": "npm unlink atat-common && cd ./apps/common && npm unlink",
    "sync-common": "npm install ./apps/common",
    "scripts": "node --no-deprecation ./scripts/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": "eslint -c .eslintrc --ignore-path .eslintignore",
    "apps/**/*.ts": "eslint -c apps/.eslintrc --ignore-path apps/.eslintignore",
    "apps/stories/**/*.tsx": "eslint -c apps/stories/.eslintrc --ignore-path apps/stories/.eslintignore",
    "apps/majiang/**/*.vue": "eslint -c apps/majiang/.eslintrc --ignore-path apps/majiang/.eslintignore"
  },
  "keywords": [],
  "author": "Zhouyang Ye",
  "license": "ISC",
  "dependencies": {
    "atat-common": "file:apps/common",
    "chalk": "^4.1.0",
    "cheerio": "^1.0.0-rc.11",
    "clear": "^0.1.0",
    "cli-cursor": "^3.1.0",
    "cookie": "^0.5.0",
    "crypto-js": "^4.1.1",
    "figlet": "^1.4.0",
    "highlight.js": "^11.5.1",
    "mysql": "^2.18.1",
    "node-cmd": "^5.0.0",
    "node-emoji": "^1.10.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-router-dom": "^6.3.0",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "three": "^0.140.2",
    "uuid": "^8.3.2",
    "vue": "^3.2.37",
    "vue-router": "^4.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/eslint-parser": "^7.17.0",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@types/three": "^0.140.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "eslint": "^8.15.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-vue": "^9.3.0",
    "fontmin": "^0.9.9",
    "husky": "^4.2.5",
    "less-loader": "^11.0.0",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "^2.6.0",
    "terser-webpack-plugin": "^5.3.1",
    "ts-loader": "^9.3.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.7.4",
    "vue-loader": "^17.0.0",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^5.8.0"
  }
}
