{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "NodeJS": true
  },
  "rules": {
    "@typescript-eslint/no-var-requires": 0,
    "no-var": 1,
    "no-magic-numbers": "warn"
  }
}
