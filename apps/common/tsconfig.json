{
  "compilerOptions": {
    "alwaysStrict": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "outDir": "./lib/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es6",
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}